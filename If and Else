int codigo = 0;
float valorFinal = 0;


printf("digite o código do produto: ");
scanf("%d", &codigo);

switch(codigo){
    case 100:
      valorFinal = 1.59 *1.10;
      printf("produto A - valor R$ %.2f", valorFinal);
      break;
    case 101:
      valorFinal = 4.29 *1.10;
      printf("produto B - valor R$ %.2f", valorFinal);
      break;
    case 102:
      valorFinal = 3.29 *1.10;
      printf("produto C - valor R$ %.2f", valorFinal);
      break;
    default:
      printf("Código inválido");
  }



